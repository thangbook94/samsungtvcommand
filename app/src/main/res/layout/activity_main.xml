<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">


    <TableLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal">

            <ImageButton
                android:id="@+id/buttonpower"
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:layout_column="0"
                android:layout_gravity="center"
                android:adjustViewBounds="true"
                android:background="#FFFFFF"
                android:scaleType="fitCenter"
                android:src="@drawable/power1"
                android:contentDescription="@string/power"
                android:text="@string/power" />

            <ImageButton
                android:id="@+id/buttonsource"
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:layout_column="2"
                android:layout_gravity="center"
                android:adjustViewBounds="true"
                android:background="#FFFFFF"
                android:scaleType="fitCenter"
                android:src="@drawable/source3"
                android:contentDescription="@string/source"
                android:text="@string/source" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageButton
                android:id="@+id/number1"
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:layout_gravity="center"
                android:adjustViewBounds="true"
                android:background="#FFFFFF"
                android:scaleType="fitCenter"
                android:src="@drawable/number1"
                android:contentDescription="@string/_1"
                android:text="@string/_1" />

            <ImageButton
                android:id="@+id/number2"
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:layout_gravity="center"
                android:adjustViewBounds="true"
                android:background="#FFFFFF"
                android:scaleType="fitCenter"
                android:src="@drawable/number2"
                android:contentDescription="@string/_2"
                android:text="@string/_2" />

            <ImageButton
                android:id="@+id/number3"
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:layout_gravity="center"
                android:adjustViewBounds="true"
                android:background="#FFFFFF"
                android:scaleType="fitCenter"
                android:src="@drawable/number3"
                android:contentDescription="@string/_3"
                android:text="@string/_3" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageButton
                android:id="@+id/number4"
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:layout_gravity="center"
                android:adjustViewBounds="true"
                android:background="#FFFFFF"
                android:scaleType="fitCenter"
                android:src="@drawable/number4"
                android:contentDescription="@string/_4"
                android:text="@string/_4" />

            <ImageButton
                android:id="@+id/number5"
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:layout_gravity="center"
                android:adjustViewBounds="true"
                android:background="#FFFFFF"
                android:scaleType="fitCenter"
                android:src="@drawable/number5"
                android:contentDescription="@string/_5"
                android:text="@string/_5" />

            <ImageButton
                android:id="@+id/number6"
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:layout_gravity="center"
                android:adjustViewBounds="true"
                android:background="#FFFFFF"
                android:scaleType="fitCenter"
                android:src="@drawable/number6"
                android:contentDescription="@string/_6"
                android:text="@string/_6" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageButton
                android:id="@+id/number7"
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:layout_gravity="center"
                android:adjustViewBounds="true"
                android:background="#FFFFFF"
                android:scaleType="fitCenter"
                android:src="@drawable/number7"
                android:contentDescription="@string/_7"
                android:text="@string/_7" />

            <ImageButton
                android:id="@+id/number8"
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:layout_gravity="center"
                android:adjustViewBounds="true"
                android:background="#FFFFFF"
                android:scaleType="fitCenter"
                android:src="@drawable/number8"
                android:contentDescription="@string/_8"
                android:text="@string/_8" />

            <ImageButton
                android:id="@+id/number9"
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:layout_gravity="center"
                android:adjustViewBounds="true"
                android:background="#FFFFFF"
                android:scaleType="fitCenter"
                android:src="@drawable/number9"
                android:contentDescription="@string/_9"
                android:text="@string/_9" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageButton
                android:id="@+id/volup"
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:layout_column="0"
                android:layout_gravity="center"
                android:adjustViewBounds="true"
                android:background="#FFFFFF"
                android:scaleType="fitCenter"
                android:src="@drawable/chup1"
                android:contentDescription="@string/vol_up"
                android:text="@string/vol_up" />

            <ImageButton
                android:id="@+id/number0"
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:layout_column="1"
                android:layout_gravity="center"
                android:adjustViewBounds="true"
                android:background="#FFFFFF"
                android:scaleType="fitCenter"
                android:src="@drawable/number0"
                android:contentDescription="@string/_0"
                android:text="@string/_0" />

            <ImageButton
                android:id="@+id/channelup"
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:layout_column="2"
                android:layout_gravity="center"
                android:adjustViewBounds="true"
                android:background="#FFFFFF"
                android:scaleType="fitCenter"
                android:src="@drawable/chup4"
                android:text="@string/chn_up"
                android:contentDescription="@string/chn_up"/>
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageButton
                android:id="@+id/voldown"
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:layout_column="0"
                android:layout_gravity="center"
                android:adjustViewBounds="true"
                android:background="#FFFFFF"
                android:scaleType="fitCenter"
                android:src="@drawable/chdown1"
                android:contentDescription="@string/vol_down"
                android:text="@string/vol_down" />

            <ImageButton
                android:id="@+id/buttonup"
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:layout_column="1"
                android:layout_gravity="center"
                android:adjustViewBounds="true"
                android:background="#FFFFFF"
                android:scaleType="fitCenter"
                android:src="@drawable/up1"
                android:contentDescription="@string/up"
                android:text="@string/up" />

            <ImageButton
                android:id="@+id/channeldown"
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:layout_column="2"
                android:layout_gravity="center"
                android:adjustViewBounds="true"
                android:background="#FFFFFF"
                android:scaleType="fitCenter"
                android:src="@drawable/chdown4"
                android:contentDescription="@string/chn_down"
                android:text="@string/chn_down" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageButton
                android:id="@+id/buttonleft"
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:layout_gravity="center"
                android:adjustViewBounds="true"
                android:background="#FFFFFF"
                android:scaleType="fitCenter"
                android:src="@drawable/left1"
                android:contentDescription="@string/left"
                android:text="@string/left" />

            <ImageButton
                android:id="@+id/buttonok"
                android:layout_width="54dp"
                android:layout_height="65dp"
                android:layout_gravity="center"
                android:adjustViewBounds="true"
                android:background="#FFFFFF"
                android:scaleType="fitCenter"
                android:src="@drawable/enter5"
                android:contentDescription="@string/ok"
                android:text="@string/ok" />

            <ImageButton
                android:id="@+id/buttonright"
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:layout_gravity="center"
                android:adjustViewBounds="true"
                android:background="#FFFFFF"
                android:scaleType="fitCenter"
                android:src="@drawable/right1"
                android:contentDescription="@string/right"
                android:text="@string/right" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageButton
                android:id="@+id/buttondown"
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:layout_column="1"
                android:layout_gravity="center"
                android:adjustViewBounds="true"
                android:background="#FFFFFF"
                android:scaleType="fitCenter"
                android:src="@drawable/down1"
                android:contentDescription="@string/down"
                android:text="@string/down" />

            <ImageButton
                android:id="@+id/buttonback"
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:layout_column="2"
                android:layout_gravity="center"
                android:adjustViewBounds="true"
                android:background="#FFFFFF"
                android:scaleType="fitCenter"
                android:src="@drawable/back3"
                android:contentDescription="@string/back"
                android:text="@string/back" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageButton
                android:id="@+id/buttonbrowser"
                android:layout_width="65dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:adjustViewBounds="true"
                android:background="#FFFFFF"
                android:padding="3dp"
                android:scaleType="fitCenter"
                android:src="@drawable/browser1"
                android:contentDescription="@string/browser"
                android:text="@string/browser" />

            <ImageButton
                android:id="@+id/buttonyoutube"
                android:layout_width="65dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:adjustViewBounds="true"
                android:background="#FFFFFF"
                android:scaleType="fitCenter"
                android:src="@drawable/youtube2"
                android:contentDescription="@string/youtube"
                android:text="@string/youtube" />

            <ImageButton
                android:id="@+id/buttonnetflix"
                android:layout_width="65dp"
                android:layout_height="50dp"
                android:layout_column="2"
                android:layout_gravity="center"
                android:adjustViewBounds="true"
                android:background="#FFFFFF"
                android:scaleType="fitCenter"
                android:src="@drawable/netflix4"
                android:contentDescription="@string/netflix"
                android:text="@string/netflix" />
        </TableRow>

        <TableRow>

            <EditText
                android:id="@+id/sendText"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_span="2"
                android:inputType="text"
                android:autofillHints="@string/hint"
                android:hint="@string/hint" />

            <ImageButton
                android:id="@+id/button"
                android:layout_width="70dp"
                android:layout_height="50dp"
                android:layout_column="2"
                android:adjustViewBounds="true"
                android:background="#FFFFFF"
                android:scaleType="fitCenter"
                android:src="@drawable/connect2"
                android:contentDescription="@string/refresh"
                android:text="@string/refresh" />
        </TableRow>
    </TableLayout>

</LinearLayout>